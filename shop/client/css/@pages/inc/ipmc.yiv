.ipmc-link{padding:0}
.ipmc-link:hover .ipmc-box-text{text-decoration:underline;}
.ipmc-link:hover .ipmc-box-image{box-shadow:0 3px 4px 0 rgba(0,0,0,0.14),0 3px 3px -2px rgba(0,0,0,0.2),0 1px 8px 0 rgba(0,0,0,0.12)}
.ipmc-box{position:relative;width:100%;height:95px;padding:0 5px;overflow:hidden;white-space:nowrap;display:inline-block;vertical-align:top;}
.ipmc-box-image{position:relative;margin:12.5px 0;width:70px;height:70px;border-radius:50%;overflow:hidden;vertical-align:middle;display:inline-block;}
.ipmc-box-image img{display:block;max-width:100%;max-height:100%;}
.ipmc-box-text{margin:0;margin-left:10px;margin-right:70px;padding:10px 0;white-space:normal;vertical-align:middle;display:inline-block;}

